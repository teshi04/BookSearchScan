<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.tsur.booksearch.ui.ItemActivity">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:text="夏の塩 (SHY NOVELS)" />

                <TextView
                    android:id="@+id/author_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/gray_800"
                    android:textSize="18sp"
                    tools:text="榎田尤利" />

                <TextView
                    android:id="@+id/publication_date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/gray_800"
                    android:textSize="18sp"
                    tools:text="2009/7/30" />

                <TextView
                    android:id="@+id/kindle_exist_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kindle_exist_background"
                    android:text="@string/label_kindle_edition_exists"
                    android:textColor="@color/orange_500"
                    android:textSize="18sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/kindle_none_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kindle_none_background"
                    android:text="@string/label_kindle_edition_non"
                    android:textColor="@color/gray_900"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/open_amazon_button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="32dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_open_in_browser_black_24dp"
                    android:text="@string/label_open_amazon"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/open_chil_button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_open_in_browser_black_24dp"
                    android:text="@string/label_open_chilchil"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>


</LinearLayout>