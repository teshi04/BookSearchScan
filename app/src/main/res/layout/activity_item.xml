<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.tsur.chil.ui.ItemActivity">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="夏の塩 (SHY NOVELS)" />

    <TextView
        android:id="@+id/author_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="#757575"
        android:textSize="18sp"
        tools:text="榎田尤利" />

    <TextView
        android:id="@+id/kindle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_kindle_edition"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Kindle 版 あり" />

    <Button
        android:id="@+id/browser_amazon_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Amazon で開く" />

    <Button
        android:id="@+id/browser_chil_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ちるちる で開く" />

</LinearLayout>